<div class="interior">
  <h2>Login</h2>

<% if @error %>
<div class="errors">
<p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <%= @error %></p>
</div>
<% end %>

  <%= form_for :user, url: user_login_path do |f| %>
    <%= f.text_field :email, placeholder: "Email"  %>
    <%= f.password_field :password, placeholder: "Password"  %>
    <%= f.submit "Login" %>
  <% end %>
</div>
