<div class="interior">
  <div class="profile-user">
    <h2>Welcome <%= @user.username %></h2>
    <p>Points: <%= @user.points %></p>
  </div>
  <div class="profile">
  <div class="profile-favorite">
  <h2>Favorites</h2>
    <% @favorites.each do |favorite| %>
    <div class="individual-favorite">
      <ul>
        <li><h3><a href="/restaurants/<%= favorite.restaurant.id %>">
        <%= favorite.restaurant.name %></a></h3></li>
        <li><%= favorite.restaurant.address %></li>
        <li>Workability rating: <%= favorite.restaurant.work_score.round(1) %></li>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="profile-review">
  <h2>Reviews</h2>
  <% @reviews.each do |review| %>
    <div class="individual-profile-review">
      <ul>
        <li><h3><a href="/restaurants/<%= review.restaurant.id %>">
        <%= review.restaurant.name %></a></h3></li>
        <li><%= review.restaurant.address %></li>
        <li>Workability rating: <%= review.restaurant.work_score.round(1) %></li>
        <li><%= review.comments %></li>
        <li class="review-links"><%= link_to 'Edit', edit_restaurant_review_path(review.restaurant, review) %></li>
        <li class="review-links"><%= link_to 'Delete', restaurant_review_path(review.restaurant, review), :method => :delete %></li>
      </ul>
    </div>
  <% end %>
  </div>
  </div>
</div>
