<div class="interior">
  <h2>Register</h2>

  <% if @errors %>
    <%= render "shared/error" %>
  <% end %>

  <%= form_for @user, url: user_register_path do |f| %>
    <%= f.text_field :username, placeholder: "Username" %>
    <%= f.text_field :email, placeholder: "Email"  %>
    <%= f.password_field :password, placeholder: "Password"  %>
    <%= f.submit "Register" %>
  <% end %>
</div>
