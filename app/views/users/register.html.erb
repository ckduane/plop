<table>
  <%= form_for @user, url: user_register_path do |f| %>
  <tr>
    <th colspan="2">Register</th>
    <th></th>
  </tr>
<tr>
  <td><%= f.label "Username: "  %></td>
  <td><%= f.text_field :username, placeholder: "Username" %></td>
</tr>
<tr>
  <td><%= f.label "Email: " %></td>
  <td><%= f.text_field :email, placeholder: "Email"  %></td>
</tr>
<tr>
  <td><%= f.label "Password: " %></td>
  <td><%= f.password_field :password, placeholder: "Password"  %></td>
</tr>
<tr>
  <td><%= f.submit "Register" %></td>
</tr>
<% end %>
</table>

<ul>
<% if @errors %>
  <% @errors.each do |error| %>
  <li><%= error %></li>
  <% end %>
<% end %>
</ul>

